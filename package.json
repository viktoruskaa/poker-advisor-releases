{
  "name": "desktop-utility-service",
  "version": "5.0.0",
  "description": "Stealth poker advisor bot",
  "main": "main.js",
  "author": "viktor",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "electron-log": "^5.1.5",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "lodash.isequal": "^4.5.0",
    "poker-evaluator": "^2.0.0",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.4",
    "tesseract.js": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.desktop.service.utility",
    "productName": "Desktop Service Utility",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Desktop Service Utility",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "dist",
      "app": "."
    },
    "publish": {
      "provider": "github",
      "owner": "viktoruskaa",
      "repo": "poker-advisor-releases"
    }
  }
}